<Window x:Class="NumberToWord_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NumberToWord_Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="900">
    <Grid>
        <Label x:Name="lblNumber" Content="Insert Number" HorizontalAlignment="Left" Margin="51,68,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNumber" HorizontalAlignment="Left" Height="23" Margin="161,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="141" RenderTransformOrigin="0.589,0.971"/>
        <Button Content="Convert" HorizontalAlignment="Left" Margin="344,71,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label x:Name="lblResult" Content="Result" HorizontalAlignment="Left" Margin="51,125,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.463,0.488"/>
        <TextBox x:Name="txtResult" HorizontalAlignment="Left" Height="50" Margin="98,128,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="768" IsEnabled="False"/>

    </Grid>
</Window>
